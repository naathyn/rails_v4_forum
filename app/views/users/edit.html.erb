<legend><%= @title %></legend>

<div class="row-fluid">
  <div class="span5 offset3">

   <%= gravatar_for(@user, size: 75) %>
      <br /><br /><br /><br /><br />
    <a class="btn btn-small" href="http://gravatar.com/emails" 
    alt="Sign in to Gravatar to change your profile picture" 
    type="submit" target="_blank" style="margin-bottom:1em;">Change</a>

  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>

    <% end %>

  </div>
</div>
