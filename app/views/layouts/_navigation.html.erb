<%= link_to "Rails Forum", :root, id: "logo" %>
<div class="nav-collapse collapse">

  <% if signed_in? %>
    <p class="navbar-text pull-right">
      Signed in as <%= link_to current_user.username, edit_user_path(current_user) %>
    </p>
  <% end %>

  <ul class="nav navigation">
    <li class=""><%= link_to "Home", :root %></li>
    <li class=""><%= link_to "Members", :users %></li>
    <% if signed_in? %>
      <li class=""><%= link_to "Account", edit_user_path(current_user) %></li>
      <li class=""><%= link_to "Sign out", :signout, method: "delete" %></li>
    <% else %>
      <li class=""><%= link_to "Signin", :signin %></li>
      <li class=""><%= link_to "Register", :signup %></li>
    <% end %>
  </ul>
</div>
